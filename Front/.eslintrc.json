{
  "plugins": [
    "requirejs"
  ],
    "env": {
        "browser": true
    },
    "extends": ["airbnb-base/legacy", "plugin:requirejs/recommended"],
    "rules": {
        "vars-on-top": 0,
        "no-plusplus": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "max-len": 0,
        "no-shadow": 0,
        "no-restricted-syntax": 0,
        "guard-for-in": 0,
        "radix": 0,
        "no-return-assign": 0,
        "brace-style": 0,
        "array-callback-return": 0,
        "no-unused-vars": ["error", { "vars": "all", "args": "none"}],
        "no-multi-str": 0,
        "consistent-return": 0,
        "no-loop-func": 0,
        "no-console": 0,

        "no-tabs": 0,
        "eqeqeq": 0,
        "no-unused-vars": 0,
        "no-useless-escape": 0,
        "block-scoped-var": 0,
        "global-require": 0,
        "no-mixed-spaces-and-tabs": 0,
        "no-undef": 0,
        "one-var": 0,
        "no-redeclare": 0,
        "new-cap": 0,
        "no-unreachable": 0,
        "array-bracket-spacing": 0,
        "no-useless-concat": 0,
        "no-mixed-operators": 0,
        "no-empty": 0,
        "no-new-object": 0,
        "camelcase": 0,

        "no-lonely-if": 0,
        "no-dupe-keys": 0,
        "newline-per-chained-call": 0,
        "func-names": 0,
        "no-global-assign": 0,
        "default-case": 0,
        "no-new-wrappers": 0,
        "no-prototype-builtins": 0,
        "func-names": 0,
        "no-unused-expressions": 0,
        "no-control-regex": 0,
        "no-throw-literal": 0,
        "no-multi-assign": 0,
        
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "func-names": ["error", "never"]
    }
}
